extends layout

include mixins/form
include mixins/links

block content

  #content

    h2 Authenticate with inventaire.io username and password


    mixin errors()

    form.form-horizontal(action='#{proxyPath}/login', method='post')

      .form-group
        label.col-sm-2.control-label Username
        .col-sm-3
          input.form-control(type='text', autofocus, name='username')

      .form-group
        label.col-sm-2.control-label Password
        .col-sm-3
          input.form-control(type='password', name='password')

      .form-group
        .col-sm-offset-2.col-sm-3
          button.btn-primary.btn(type="submit") Login
          |&nbsp;or&nbsp;
          +anchor("/", 'Cancel')

    p.inventaire-links
      a(href='#{invHost}/signup', target="_blank") Create an account on inventaire.io
      br
      a(href='#{invHost}/login/forgot-password', target="_blank") Forgot password
