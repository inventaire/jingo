{
  "name": "jingo",
  "version": "1.7.2",
  "description": "A nodejs based wiki engine",
  "author": "Claudio Cicali <claudio.cicali@gmail.com>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "gollum",
    "cms",
    "markdown"
  ],
  "standard": {
    "ignore": [
      "/public/vendor/"
    ],
    "globals": [
      "expect",
      "describe",
      "Git",
      "sinon",
      "chai"
    ]
