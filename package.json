  "dependencies": {
    "bluebird": "^2.3.11",
    "body-parser": "^1.10.0",
    "browserify": "^14.4.0",
    "chalk": "^1.1.3",
    "commander": "^2.5.1",
    "cookie-parser": "^1.3.3",
    "cookie-session": "^1.1.0",
    "cors": "^2.7.1",
    "ecstatic": "0.4.x",
    "express": "^4.10.6",
    "express-flash": "0.0.2",
    "express-session": "^1.9.3",
    "express-validator": "^2.7.0",
    "font-awesome": "^4.7.0",
    "got": "^6.6.3",
    "inv-utils": "^2.1.0",
    "jade": "*",
    "js-yaml": "^3.1.0",
    "level": "^1.5.0",
