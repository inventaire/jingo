    "autoprefixer": "^6.6.0",
    "chai": "*",
    "cssnano": "^3.9.1",
    "mocha": "*",
    "node-sass": "^4.1.1",
    "nodemon": "^1.10.2",
    "postcss-cli": "^2.6.0",
    "sinon": "^1.10.3",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "test": "mocha test/spec",
    "start": "./jingo -c config.yaml",
