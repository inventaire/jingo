    "cors": "^2.8.5",
    "ecstatic": "0.4.x",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^2.7.0",
    "font-awesome": "^4.7.0",
    "got": "^6.6.3",
    "jade": "*",
    "js-yaml": "^3.14.0",
